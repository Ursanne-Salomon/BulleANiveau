<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/sensorTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste des capteurs sera affichÃ©e ici"
        android:textSize="16sp"
        android:padding="8dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/axeX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Axe X : "
        android:textSize="16sp"
        android:layout_marginBottom="0dp"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="0dp"
        android:paddingBottom="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingClass,MissingConstraints,ObsoleteLayoutParam" />

    <View
        android:id="@+id/axisX"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/axeY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Axe Y : "
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_editor_absoluteY="0dp"
        android:paddingEnd="25dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints,ObsoleteLayoutParam,RtlSymmetry" />

    <View
        android:id="@+id/axisY"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="#FF0000"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/axeZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Axe Z : "
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_editor_absoluteY="0dp"
        android:paddingEnd="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="13dp"
        tools:ignore="MissingConstraints,ObsoleteLayoutParam,RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>